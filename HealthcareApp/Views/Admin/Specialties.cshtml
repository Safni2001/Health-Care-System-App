@model IEnumerable<HealthcareApp.Models.Specialty>
@{
    ViewData["Title"] = "Specialties";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Specialties</h2>
    <a class="btn btn-primary" asp-action="CreateSpecialty">Add Specialty</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Name</td>
            <td>@s.Description</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="EditSpecialty" asp-route-id="@s.Id">Edit</a>
                <form asp-action="DeleteSpecialty" method="post" class="d-inline" onsubmit="return confirm('Delete this specialty?');">
                    <input type="hidden" name="id" value="@s.Id" />
                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
